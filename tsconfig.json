{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "declaration": true,
        //"allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        //"isolatedModules": true,
        "jsx": "react",
        "outDir": "./build/"
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.vue",
        "vue-shims.d.ts"
    ],
    "files": [
        "./src/react/index.tsx",
        "./src/vue/index.ts",
        "./src/web/index.ts"
    ]
}